<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medical.controller.MainController">
   <top>
      <Label styleClass="main-title" text="Gestion des Consultations Medicales" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" top="10.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <TabPane tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab text="Patients">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <HBox spacing="20.0">
                           <children>
                              <VBox spacing="5.0">
                                 <children>
                                    <Label styleClass="section-title" text="Formulaire Patient" />
                                    <GridPane hgap="10.0" vgap="8.0">
                                       <columnConstraints>
                                          <ColumnConstraints />
                                          <ColumnConstraints minWidth="200.0" />
                                       </columnConstraints>
                                       <rowConstraints>
                                          <RowConstraints />
                                          <RowConstraints />
                                          <RowConstraints />
                                          <RowConstraints />
                                          <RowConstraints />
                                       </rowConstraints>
                                       <children>
                                          <Label text="Nom:" />
                                          <TextField fx:id="nomTxt" GridPane.columnIndex="1" />
                                          <Label text="Prenom:" GridPane.rowIndex="1" />
                                          <TextField fx:id="prenomTxt" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                          <Label text="Date Naissance:" GridPane.rowIndex="2" />
                                          <DatePicker fx:id="dateNaissDP" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                          <Label text="Telephone:" GridPane.rowIndex="3" />
                                          <TextField fx:id="telTxt" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                          <Label text="Email:" GridPane.rowIndex="4" />
                                          <TextField fx:id="mailTxt" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                       </children>
                                    </GridPane>
                                    <HBox spacing="10.0">
                                       <children>
                                          <Button onAction="#addPatient" styleClass="btn-primary" text="Ajouter" />
                                          <Button onAction="#updatePatient" styleClass="btn-secondary" text="Modifier" />
                                          <Button onAction="#deletePatient" styleClass="btn-danger" text="Supprimer" />
                                       </children>
                                       <VBox.margin>
                                          <Insets top="10.0" />
                                       </VBox.margin>
                                    </HBox>
                                 </children>
                              </VBox>
                              <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="section-title" text="Liste des Patients" />
                                    <TableView fx:id="patientTable" VBox.vgrow="ALWAYS">
                                       <columns>
                                          <TableColumn fx:id="nomCol" prefWidth="120.0" text="Nom" />
                                          <TableColumn fx:id="prenomCol" prefWidth="120.0" text="Prenom" />
                                          <TableColumn fx:id="telCol" prefWidth="120.0" text="Telephone" />
                                       </columns>
                                    </TableView>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Consultations">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <HBox spacing="20.0">
                           <children>
                              <VBox spacing="5.0">
                                 <children>
                                    <Label styleClass="section-title" text="Formulaire Consultation" />
                                    <GridPane hgap="10.0" vgap="8.0">
                                       <columnConstraints>
                                          <ColumnConstraints />
                                          <ColumnConstraints minWidth="200.0" />
                                       </columnConstraints>
                                       <rowConstraints>
                                          <RowConstraints />
                                          <RowConstraints />
                                          <RowConstraints />
                                          <RowConstraints />
                                          <RowConstraints />
                                          <RowConstraints />
                                       </rowConstraints>
                                       <children>
                                          <Label text="Patient:" />
                                          <ComboBox fx:id="patientCB" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" />
                                          <Label text="Date:" GridPane.rowIndex="1" />
                                          <DatePicker fx:id="dateConsultDP" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                          <Label text="Heure:" GridPane.rowIndex="2" />
                                          <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                             <children>
                                                <Spinner fx:id="hSpinner" prefWidth="70.0" />
                                                <Label text="h" />
                                                <Spinner fx:id="mSpinner" prefWidth="70.0" />
                                             </children>
                                          </HBox>
                                          <Label text="Motif:" GridPane.rowIndex="3" />
                                          <TextField fx:id="motifTxt" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                          <Label text="Statut:" GridPane.rowIndex="4" />
                                          <ComboBox fx:id="statutCB" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                          <Label text="Notes:" GridPane.rowIndex="5" />
                                          <TextArea fx:id="notesTxt" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                       </children>
                                    </GridPane>
                                    <HBox spacing="10.0">
                                       <children>
                                          <Button onAction="#addConsult" styleClass="btn-primary" text="Ajouter" />
                                          <Button onAction="#updateConsult" styleClass="btn-secondary" text="Modifier" />
                                          <Button onAction="#deleteConsult" styleClass="btn-danger" text="Supprimer" />
                                       </children>
                                       <VBox.margin>
                                          <Insets top="10.0" />
                                       </VBox.margin>
                                    </HBox>
                                 </children>
                              </VBox>
                              <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="section-title" text="Liste des Consultations" />
                                    <TableView fx:id="consultTable" VBox.vgrow="ALWAYS">
                                       <columns>
                                          <TableColumn fx:id="patientConsultCol" prefWidth="120.0" text="Patient" />
                                          <TableColumn fx:id="dateCol" prefWidth="100.0" text="Date" />
                                          <TableColumn fx:id="heureCol" prefWidth="80.0" text="Heure" />
                                          <TableColumn fx:id="motifCol" prefWidth="120.0" text="Motif" />
                                          <TableColumn fx:id="statutCol" prefWidth="100.0" text="Statut" />
                                       </columns>
                                    </TableView>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>
